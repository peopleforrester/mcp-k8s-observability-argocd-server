{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-desktop/main/schemas/config.schema.json",
  "_comment": "DANGER: Full access configuration including destructive operations. Use with extreme caution!",
  "mcpServers": {
    "argocd": {
      "command": "uvx",
      "args": ["argocd-mcp-server"],
      "env": {
        "ARGOCD_URL": "https://argocd.example.com",
        "ARGOCD_TOKEN": "your-api-token-here",
        "MCP_READ_ONLY": "false",
        "MCP_DISABLE_DESTRUCTIVE": "false",
        "MCP_AUDIT_LOG": "/var/log/argocd-mcp/audit.log",
        "ARGOCD_MCP_LOG_LEVEL": "DEBUG"
      }
    }
  }
}
